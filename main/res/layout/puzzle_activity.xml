<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background= "#ff000000"
    tools:context="com.bcSudokuMentor.sudokumentor.PuzzleActivity" >

    <RelativeLayout
        android:id="@+id/puzzle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ff000000"
        android:verticalSpacing = "20dp"
        android:gravity="center"
        android:horizontalSpacing="100dp"
        android:numColumns="3"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp">

        <GridView
            android:id="@+id/Set0"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3" />
        <GridView
            android:id="@+id/Set1"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_toRightOf="@+id/Set0"
            android:layout_toEndOf="@+id/Set0"
            />
        <GridView
            android:id="@+id/Set2"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_toRightOf="@+id/Set1"
            android:layout_toEndOf="@+id/Set1"
            />
        <GridView
            android:id="@+id/Set3"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_centerVertical="true"
            android:layout_below="@+id/Set0"/>
        <GridView
            android:id="@+id/Set4"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/Set3"
            android:layout_below="@+id/Set1" />
        <GridView
            android:id="@+id/Set5"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Set4"
            android:layout_below="@+id/Set2"/>
        <GridView
            android:id="@+id/Set6"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_below="@+id/Set3"/>
        <GridView
            android:id="@+id/Set7"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Set4"
            android:layout_toRightOf="@+id/Set6" />
        <GridView
            android:id="@+id/Set8"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:verticalSpacing = "2dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#BD9454"
            android:numColumns="3"
            android:layout_toRightOf="@+id/Set7"
            android:layout_below="@+id/Set5"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/bottomPanel"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="9"
        android:gravity="center"
        android:background="#ff0000ff"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="12dp"
        android:layout_below="@+id/puzzle"/>

    <Button
        android:id="@+id/nextMoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="nextMove"
        android:text="Next Move"
        android:layout_below="@+id/bottomPanel"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/hintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nextMoveButton"
        android:onClick="nextHint"
        android:text="Hint"
        android:layout_below="@id/bottomPanel"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/showPossiblesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hintButton"
        android:onClick="possibles"
        android:layout_below="@id/bottomPanel"
        android:text="Toggle Possibles"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/deletePos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="possibles"
        android:text="Delete Possibles"
        android:layout_below="@+id/nextMoveButton"
        android:textColor="#FFFFFF"/>



</RelativeLayout>